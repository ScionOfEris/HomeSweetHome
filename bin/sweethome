#!/bin/sh

# This script sets up my home dir the way I like it.


# First, grab my stuff from github unless $1 is --noup
if [ "$1" != '--noup' ] ; then
  ( cd ~/.home ; git pull )
  # if git pull fails, bail
  if [ "$?" -ne '0' ] ; then
    echo 'NOT UPDATING HOME!  Failed to pull repo.'
    exit 11
  fi
fi

# Then, update my .files
for file in .bashrc .bash_logout .bash_profile .bastionrc .vimrc ; do
  rm -f ~/${file}
  ln -s ~/.home/${file} ~
done

# Get my various stuff from .home/bin
if [ ! -d ~/bin ] ; then
  mkdir ~/bin
  chmod 755 ~/bin
fi

# vim setup
rm -f ~/.vim
ln -s ~/.home/vim ~/.vim


( cd ~/.home/bin
  for file in * ; do
    rm -f ~/bin/$file
    ln -s ~/.home/bin/$file ~/bin
  done
)


# Note that we updated
touch ~/.homesweethome

